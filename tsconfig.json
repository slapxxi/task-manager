{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2015", "dom", "es2015.promise"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@local/hooks": ["hooks"],
      "@local/hooks/*": ["hooks/*"],
      "@local/types": ["types"],
      "@local/components": ["components"],
      "@local/components/*": ["components/*"]
    }
  },
  "include": ["./src/"],
  "compileOnSave": true
}
